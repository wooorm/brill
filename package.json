{
  "name": "brill",
  "version": "2.0.0",
  "description": "Part-of-speech tags from the Brill-tagger",
  "license": "MIT",
  "keywords": [
    "brill",
    "word",
    "list",
    "part",
    "speech",
    "part-of-speech",
    "pos",
    "post"
  ],
  "files": [
    "lib/",
    "index.js"
  ],
  "repository": "words/brill",
  "bugs": "https://github.com/words/brill/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.0",
    "browserify": "^16.0.0",
    "concat-stream": "^2.0.0",
    "follow-redirects": "^1.0.0",
    "nyc": "^15.0.0",
    "plain-text-data-to-json": "^1.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "generate": "node build.js",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s brill -o brill.js",
    "build-mangle": "browserify . -s brill -p tinyify -o brill.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "brill.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
