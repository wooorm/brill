{
  "name": "brill",
  "version": "1.0.0",
  "description": "Part-of-speech tags from the Brill-tagger",
  "license": "MIT",
  "keywords": [
    "brill",
    "word",
    "list",
    "part",
    "speech",
    "part-of-speech",
    "pos",
    "post"
  ],
  "files": [
    "lib/",
    "index.js"
  ],
  "repository": "https://github.com/wooorm/brill",
  "bugs": "https://github.com/wooorm/brill/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.1",
    "browserify": "^13.0.1",
    "concat-stream": "^1.5.1",
    "esmangle": "^1.0.1",
    "follow-redirects": "^0.2.0",
    "has": "^1.0.1",
    "nyc": "^7.0.0",
    "plain-text-data-to-json": "^1.0.0",
    "remark-cli": "^1.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^4.0.0",
    "remark-validate-links": "^5.0.0",
    "tape": "^4.0.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-generate": "node script/generate.js",
    "build-bundle": "browserify index.js --bare -s brill > brill.js",
    "build-mangle": "esmangle brill.js > brill.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "brill.js",
      "brill.min.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "plugins": {
      "comment-config": null,
      "github": null,
      "lint": {
        "list-item-spacing": false
      },
      "validate-links": null
    },
    "settings": {
      "bullet": "*"
    }
  }
}
