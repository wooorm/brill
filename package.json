{
  "name": "brill",
  "version": "1.0.2",
  "description": "Part-of-speech tags from the Brill-tagger",
  "license": "MIT",
  "keywords": [
    "brill",
    "word",
    "list",
    "part",
    "speech",
    "part-of-speech",
    "pos",
    "post"
  ],
  "files": [
    "lib/",
    "index.js"
  ],
  "repository": "words/brill",
  "bugs": "https://github.com/words/brill/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.1",
    "browserify": "^14.0.0",
    "concat-stream": "^1.5.1",
    "esmangle": "^1.0.1",
    "follow-redirects": "^1.0.0",
    "has": "^1.0.1",
    "nyc": "^11.0.0",
    "plain-text-data-to-json": "^1.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "tape": "^4.0.0",
    "xo": "^0.18.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-generate": "node script/generate.js",
    "build-bundle": "browserify index.js --bare -s brill > brill.js",
    "build-mangle": "esmangle brill.js > brill.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "brill.js"
    ]
  },
  "remarkConfig": {
    "plugins": ["preset-wooorm"]
  }
}
